<%= form_with(model: blog) do |form| %>
  <% if blog.errors.any? %>
    <div style="color: red">

      <ul>
        <% blog.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="p-2">
    <%= form.label "Name of Blog", style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div class="p-2">
    <%= form.label "Put Your Content Here", style: "display: block" %>
    <%= form.text_area :body, placeholder: "Enter Blog content here", size: "70x20" %>
  </div>

  <div class="p-2">
    <%= form.label "Image For Blog", style: "display: block" %>
    <%= form.file_field :image, class: "btn btn-secondary" %>
  </div>
 
  <div class="p-2">
    <% if blog.id.nil? %>
      <%= form.submit :create, class: "btn btn-success" %>
    <% else %>
      <%= form.submit :update, class: "btn btn-success" %>
    <% end %>

  </div>
<% end %>
