<div class="p-2 d-flex justify-content-center" style="height: 700px">
  <div class="" style="padding: 150px">
    <div class="d-flex justify-content-center p-2">
      <h1>Welcome to Application - Please Log in</h1>
    </div>
      <%= form_with url: sign_in_path do |f| %>
        <div class="form-group form-element p-2">
          <p>
            <%= f.label 'Email Address:'%><br>
            <%= f.text_field :email, id: 'email exampleInputEmail1', class: 'form-text', placeholder: "Enter Email Address"  %>
          </p>
        </div>
        <div class="form-group form-element p-2">
          <p>
            <%= f.label 'password:'%><br>
            <%= f.password_field :password, id: 'password exampleInputEmail1', class: 'form-text', placeholder: "Enter Your Password" %>
          </p>
        </div>
        <p>
          <%= f.submit 'Log In', class: 'btn btn-primary' %>
        </p>
      <% end %>
  <h5>
    first time here !!!
  </h5>
    <%= link_to 'create new account', sign_up_path , class: "link-primary" %>
  </div>
</div>

<% if params[:issue].present? %>
  <%= button_to 'send email again', send_email_again_path(id: params[:issue]),  class: "btn btn-primary btn-sm" %>
<% end %>